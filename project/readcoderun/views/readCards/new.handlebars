<div class="c-content">
  <h2>Log a new reading activity:</h2>
  <form class="c-form" action="/readCard" method="post">
      <div class="c-form__item">
        <h4 class="c-form__title">Date:</h4>
        <input type="text" name="date" value="">
      </div>
      <div class="c-form__item">
        <h4 class="c-form__title"> Start Page: </h4>
        <input type="number" name="startPage" value="">
      </div>
      <div class="c-form__item">
        <h4 class="c-form__title"> End Page: </h4>
        <input type="number" name="endPage" value="">
      </div>
      <div class="c-form__item">
        <h4 class="c-form__title">Book Title:</h4>
        <input type="text" name="bookTitle" value="">
      </div>
      <div class="c-form__item">
        <h4 class="c-form__title">Time Spent Reading (minutes):</h4>
        <input type="text" name="timeSpent" value="">
      </div>
      <div class="c-form__item">
        <button type="submit" name="submit">Submit</button>
      </div>
  </form>
</div>